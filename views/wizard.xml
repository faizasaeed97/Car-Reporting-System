<odoo>
    <record id="create_car_wizard" model="ir.ui.view">
        <field name="name">carrepair.modules.wizard</field>
        <field name="model">carrepair.modules</field>
        <field name="arch" type="xml">
            <form string="Repair Orders">
                <group>
                    <field name="repair_details"/>
                    <field name="date_of_repair"/>
                    <field name="car_select"/>
                    <footer>
                        <button name="createtorder" string="Add" type="object" class="btn-primary"/>
                        <button string="Cancel" type="object" class="btn-secondary" special="cancel"/>

                    </footer>
                </group>
            </form>
        </field>
    </record>

