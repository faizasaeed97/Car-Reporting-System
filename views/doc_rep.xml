<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <report
                id="action_report_document"
                model="car.modules"
                string="Document Report"
                report_type="qweb-html"
                name="car_customization.document_report"
                file="car_customization.document_report"

        />

        <template id="document_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Design Creative W.L.L</strong>
                        </div>

                        <div class="page">

                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <tr>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>Roll#</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>Employee Name</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>Passport Expiry</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>RP Expiry</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>CPR Expiry</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>Bank Name</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>Bank Account Number</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="col-auto mw-100 mb-2"
                                             color="#17a2b8">
                                            <strong>IBAN</strong>
                                        </div>
                                    </td>

                                </tr>

                            </table>


                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
